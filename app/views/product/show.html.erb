<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="/"><%= render_breadcrumbs %></a></li>
                <li class="active"><%= @product.title %></li>
            </ol>
        </div>
    </div>
</div>

<div class="single contact">
    <div class="container">
        <div class="single-main">
            <div class="col-md-9 single-main-left">
                <div class="sngl-top">
                    <div class="col-md-5 single-top-left">

                    <div class="flexslider">
                        <ul class="slides">
                            <li data-thumb="<%= asset_path 's-1.jpg' %>">
                                <div class="thumb-image"> <img src="<% asset_path 's-1.jpg' %>" data-imagezoom="true" class="img-responsive" alt=""/></div>
                            </li>
                            <li data-thumb="<%= asset_path 's-2.jpg' %>">
                                <div class="thumb-image"> <img src="<% asset_path 's-2.jpg' %>" data-imagezoom="true" class="img-responsive" alt=""/></div>
                            </li>
                            <li data-thumb="<%= asset_path 's-3.jpg' %>">
                                <div class="thumb-image"> <img src="<% asset_path 's-3.jpg' %>" data-imagezoom="true" class="img-responsive" alt=""/></div>
                            </li>
                        </ul>
                    </div>
                
                </div>
                <div class="col-md-7 single-top-right">
                    <div class="single-para simpleCart">
                        <h2><%= @product.title %></h2>
                        <div class="star-on">
                            <ul class="star-footer">
                                <li><a href="#"><i> </i></a></li>
                                <li><a href="#"><i> </i></a></li>
                                <li><a href="#"><i> </i></a></li>
                                <li><a href="#"><i> </i></a></li>
                                <li><a href="#"><i> </i></a></li>
                            </ul>
                            <div class="review">
                                <a href="#">1 customer review </a>
                            </div>
                            <div class="clearfix"> </div>
                        </div>

                        <h5 class="item_price">$ <%= @product.price %> </h5>
                        <% if @product.old_price %>
                            <del><%= @product.old_price %></del>
                        <% end %>
                        <p><%= @product.content %></p>
                        <div class="available">
                            <ul>
                            <li>Color
                            <select>
                                <option>Black</option>
                                <option>Brown</option>
                            </select></li>
                            <li class="size-in">Size<select>
                                <option>38</option>
                                <option>39</option>
                                <option>40</option>
                                <option>41</option>
                            </select></li>
                            <div class="clearfix"></div>
                        </ul>
                    </div>
                    <ul class="tag-men">
                        <li><span>CATEGORY</span>
                        <strong>: <a href="/category/<%=@product.category.bytitle%>">
                            <%= @product.category.title %></a>
                        </strong>
                        </li>
                        </ul>
                        <div class="quantity">
                            <input type="number" size="4" value="1" name="quantity" min="1" step="1">
                        </div>

                        </div>
                    
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="tabs">
                    <ul class="menu_drop">
                        <li class="item1"><a href="#"><img src"<%= asset_path 'arrow.png' %>" alt="" >Description</a>
                            <ul>
                                <li class="subitem1"><a href="#">Subitem1</a></li>
                                <li class="subitem2"><a href="#">Subitem2</a></li>
                                <li class="subitem3"><a href="#">Subitem3</a></li>
                            </ul>
                        </li>
                        <li class="item2"><a href="#"><img src="<%= asset_path 'arrow.png'%>" alt="">Additional Information </a>
                            <ul>
                                <li class="subitem1"><a href>
                                <li class="subitem2"><a href>
                            </ul>
                        </li>
                         <li class="item3"><a href="#">img src="<%= asset_path 'arrow.png'%>" alt="">Reviews </a>
                            <ul>
                                <li class="subitem1"><a href>
                                <li class="subitem2"><a href>
                            </ul>
                        </li>
                         <li class="item4"><a href="#">img src="<%= asset_path 'arrow.png'%>" alt="">Helpful Links</a>
                            <ul>
                                <li class="subitem1"><a href>
                                <li class="subitem2"><a href>
                            </ul>
                        </li>
                         <li class="item2"><a href="#">img src="<%= asset_path 'arrow.png'%>" alt="">Make A Gift</a>
                            <ul>
                                <li class="subitem1"><a href>
                                <li class="subitem2"><a href>
                            </ul>
                        </li>
                    </ul>
                </div>

                <% unless @product.related.nil? %>
                    <div class="latestproducts">
                        <div class="product-one">
                            <h3>Related Products</h3>
                            <% @product.related.each do |related| %>
                                <div class="col-md-4 product-left p-left">
                                    <div class="product-main simpleCart_shelfItem">
                                        <a href="<%=related.id %>" class="mask">
                                            <img class="img-responsice zoom-img" src="<%= asset_path related.img %>"alt=""/>
                                        </a>
                                        <div class="product-bottom">
                                            <h3><a href="<%= related.id %>"><%= related.title %></a></h3>
                                            <p>Explore Now</p>
                                            <h4>
                                                <a class="item_add add-to-cart-link" href="cart/add?id=<%=related.id %>" data-id="<%= related.id %>"><i></i>
                                                </a>
                                                <span class=" item_price">$ <%= related.price %></span>
                                                <% if related.old_price %>
                                                    <del><%= related.old_price %></del>
                                                <% end %>
                                            </h4>
                                        </div>
                                        <div class="srch">
                                            <span>-50%</span>
                                        </div>
                                    </div>
                                </div>
                            
                            <% end %>

                            <% if recent_products.any? %>

                                <div class="latestproducts">
                                    <div class="product-one">
                                        <h3>Recently Products</h3>

                                        <% recent_products.each do |recently| %>
                                            <div class="col-md-4 product-left p-left">
                                                <div class="product-main simpleCart_shelfItem">
                                                    <a href="<%=recently.id %>" class="mask">
                                                        <img class="img-responsive zoom-img" src="<%= asset_path recently.img %>"alt="" />
                                                    </a>
                                                    <div class="product-bottom">
                                                        <h3><a href="<%=recently.id %>"><%= recently.title %></a></h3>
                                                        <p>Explore Now</p>
                                                        <h4>
                                                            <a class="item_add add-to-cart-link" href="cart/add?id=<%=recently.id %>" data-id="<%=recently.id %>"><i></i>
                                                            </a>
                                                            <span class=" item_price">$ <%= recently.price %></span>
                                                            <% if recently.old_price %>
                                                                <del><%= recently.old_price %></del>
                                                            <% end %>
                                                        </h4>
                                                    </div>
                                                    <div class="srch">
                                                        <span>-50%</span>
                                                    </div>
                                                </div>
                                            </div>
                                        
                                        <% end %>
                                    
                                    </div>

                                    <div class="col-md-3 single-rigth">
                                        <div class="w_sidebar">
                                            <section class="sky-form">
                                                <h4>Categories</h4>
                                                <div class="row1 scroll-pane">
                                                    <div class="col col-4">
                                                        <label class="checkbox"><input type="checkbox" checked=""><i></i>All Shoes</label>
                                                    </div>
                                                    <div class="col col-4">
                                                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Women shoes</label>
                                                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Men shoes</label>
                                                    </div>
                                                </div>
                                            </section>
                                            <section class="sky-form">
                                                <h4>Brand</h4>
                                                <div class="row1 row2 scroll-pane">
                                                    <div class="col col-4">
                                                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Abcd</label>
                                                    </div>
                                                    <div class="col col-4">
                                                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Dr Martens</label>
                                                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Converse</label>
                                                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Timberland</label>
                                                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Vans</label>
                                                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Nike</label>
                                                    </div>
                                                </div>
                                                </section>
                                                <section class>
                                                    <h4>Color</h4>
                                                    <ul class="w_nav2">
                                                        <li><a class="color1" href="#"></a></li>
                                                        <li><a class="color2" href="#"></a></li>
                                                        <li><a class="color3" href="#"></a></li>
                                                        <li><a class="color4" href="#"></a></li>
                                                    </ul>
                                                </section>
                                                <section class="sky-form">
                                                    <h4>discount</h4>
                                                    <div class="row1 row2 scroll-pane">
                                                        <div class="col col-4">
                                                            <label class="radio"><input type="radio" name="radio" checked=""><i></i>60 % and above</label>
                                                            <label class="radio"><input type="radio" name="radio"><i></i>50 % and above</label>
                                                            <label class="radio"><input type="radio" name="radio"><i></i>40 % and above</label>
                                                        </div>
                                                        <div class="col col-4">
                                                            <label class="radio"><input type="radio" name="radio"><i></i>30 % and above</label>
                                                            <label class="radio"><input type="radio" name="radio"><i></i>20 % and above</label>
                                                            <label class="radio"><input type="radio" name="radio"><i></i>10 % and above</label>
                                                        </div>
                                                    </div>
                                                </section>
                                            </div>
                                        </div>
                                    </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </device>